<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash.notice %>
	
	<div class="notification success">
		<%= flash.notice %>
	</div>

<% else %>
	
	<div class="notification error">
		<%= flash.alert %>
	</div>

<% end %>


<%= yield %>

</body>
</html>
